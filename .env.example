# ==========================================
# Archivo .env para un entorno de PRODUCCIÓN
# ==========================================

# Desactiva el modo DEBUG
DJANGO_DEBUG=0

# Genera una clave segura y única para producción
# Puedes usar `python manage.py shell -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'`
DJANGO_SECRET_KEY=poné_una_clave_larga_y_segura_aqui

# El dominio o dominios desde los que servirás tu aplicación
DJANGO_ALLOWED_HOSTS=mi.dominio.com,www.mi.dominio.com

# Los orígenes de confianza para peticiones POST (debe incluir https://)
DJANGO_CSRF_TRUSTED_ORIGINS=https://mi.dominio.com,https://www.mi.dominio.com

# --- Opciones de seguridad (activadas con "1") ---

# Activa la redirección automática de HTTP a HTTPS
SECURE_SSL_REDIRECT=1

# Activa el soporte para cabeceras de proxy (si usas Nginx, Caddy, etc. como proxy inverso)
USE_PROXY_SSL_HEADER=1
